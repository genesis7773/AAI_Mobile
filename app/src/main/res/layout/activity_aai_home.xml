<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".aaiHomeActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="415dp"
        android:layout_marginStart="415dp"
        android:layout_marginTop="47dp"
        android:id="@+id/loMain"></TableLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Setup Building"
        android:id="@+id/btnNewBuild"
        android:layout_alignTop="@+id/loMain"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:typeface="normal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resume Active Job"
        android:id="@+id/btnResumeJob"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:typeface="normal" />

</RelativeLayout>
