
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="aai.aai_mobile.LOaddEdit">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add AHU"
        android:id="@+id/btnAddAHU"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CFM"
        android:id="@+id/btnEditCFM"
        android:layout_alignTop="@+id/btnAddAHU"
        android:layout_toRightOf="@+id/btnAddAHU"
        android:layout_toEndOf="@+id/btnAddAHU"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name plate"
        android:id="@+id/btnEditNamePlate"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="21dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/btnEditCFM"
        android:layout_toEndOf="@+id/btnEditCFM" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Comments"
            android:id="@+id/btnComments"
            android:layout_below="@+id/btnAddAHU"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="183dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notes"
        android:id="@+id/btnNotes"
        android:layout_alignTop="@+id/btnComments"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Report"
        android:id="@+id/btnCreateReport"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
