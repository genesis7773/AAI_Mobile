<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="aai.aai_mobile"  >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="AAI Mobile"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".aaiHomeActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoadEdit"
            android:label="Add New Job" >
        </activity>
        <activity
            android:name=".resume"
            android:label="Resume Job" >
        </activity>
        <activity
            android:name=".addAHU"
            android:label="Add Air Handler" >
        </activity>
        <activity
            android:name=".addGrill"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="Add Grill"
            android:theme="@style/FullscreenTheme" >
        </activity>
        <activity
            android:name=".editCfm"
            android:label="Edit CFM">
        </activity>
        <activity
            android:name=".editNamePlate"
            android:label="Edit Nameplate">
        </activity>
        <activity
            android:name=".editComments"
            android:label="Edit Comments">

        </activity>
        <activity
            android:name=".editNotes"
            android:label="Edit Notes">

        </activity>
    </application>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
</manifest>
